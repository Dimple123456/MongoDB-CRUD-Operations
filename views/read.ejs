<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read User</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>
<body>
    <div class="main_div">
        
        <div class="back_to_home">
            <a class="home_link" href="/">Back to home</a>
        </div>
        <h1 class="read_h1">All Users</h1>
        
        <div class="flex_container">

           <% if(users.length > 0 ){ %>
            <% users.forEach(function(user){ %>

                <div class="container">

                    <div class="image-url">
                        <img src="<%= user.image %>" alt="">
                    </div>
        
                    <h3><%= user.name %></h3>
        
                    <h5><%= user.email %></h5>
        
                    <div class="extra">
                        <a id="edit" href="/edit/<%= user._id %>">edit</a>
                        <a id="delete" href="/delete/<%= user._id %>">delete</a>
                    </div>
        
                </div>
                
            <% }); %>

          <% } %>

            
        </div>    

    </div>

        

        
       
         
    </div>
</body>
</html>